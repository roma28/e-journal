<% provide :title, "Редактировать пользователя | " %>

<%= render "shared/errors_messages" %>

<div class="col-md-12 col-md-offset-0">
  <%= form_for(@user) do |f| %>

      <%= render "user_fields", f: f, user: @user %>

      <div class="text-center col-md-4 col-md-offset-4">
        <%= f.submit "Сохранить изменения", class: "btn btn-lg btn-primary btn-block" %>
      </div>

  <% end %>
</div>