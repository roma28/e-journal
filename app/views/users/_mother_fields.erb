<div class="form-group">
  <%= f.label :mother_name, "Имя" %>
  <%= f.text_field :mother_name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :mother_telephone, "Телефон" %>
  <%= f.text_field :mother_telephone, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :mother_email, "E-mail" %>
  <%= f.text_field :mother_email, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :mother_job, "Место работы" %>
  <%= f.text_field :mother_job, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :mother_occupation, "Должность" %>
  <%= f.text_field :mother_occupation, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :mother_education, "Образование" %>
  <%= f.select :mother_education,["н/д", "Высшее", "Неоконченое высшее", "Среднее специальное", "Среднее", "Неполное среднее"], {}, class: "form-control" %>
</div>